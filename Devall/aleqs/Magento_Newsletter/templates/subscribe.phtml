<script>
    require([
        'jquery',
        'jquery/ui'
    ], function ($) {
        const w = 768;

        $(document).ready(function (){
            _sub(w);
            $(window).resize(function(){
                _sub(w);
            });
        });
        function _sub(width) {
            if ($(window).width() <= width) {
                $('.sub-s').css('display','block');
                $('.sub-m').css('display','none');
            } else {
                $('.sub-s').css('display','none');
                $('.sub-m').css('display','block');
            }
        }
    })
</script>
